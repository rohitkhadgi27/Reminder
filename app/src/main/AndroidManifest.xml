<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rohitkhadgi27.myapplication" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_mylauncher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="Reminder" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddWorkActivity"
            android:label="@string/title_activity_add_work"
            android:parentActivityName=".MainActivity"
            android:uiOptions="splitActionBarWhenNarrow"
            android:windowSoftInputMode="stateHidden|adjustResize" >
        </activity>
        <activity
            android:name=".RemainingDetailActivity"
            android:label="@string/title_activity_remaining_detail"
            android:parentActivityName=".MainActivity" >
        </activity>
    </application>

</manifest>
